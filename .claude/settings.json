{
  "permissions": {
    "deny": ["Bash(npm)", "Bash(npx)", "Bash(npm:*)"],
    "ask": ["Bash(pnpm install)"],
    "allow": [
      "Bash(pnpm view:*)",
      "Bash(pnpm run typecheck:*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run format)",
      "Bash(pnpm test:*)",
      "Bash(pnpm dlx vercel logs:*)",
      "Bash(SKIP_INTEGRATION_TESTS=true pnpm test:*)",
      "Bash(tmux:*)",

      "mcp__posthog__docs-search",
      "mcp__posthog__query-run",
      "mcp__vercel-appraiser__get_deployment_build_logs",
      "mcp__vercel-appraiser__list_deployments",

      "WebSearch",
      "WebFetch(domain:ai.google.dev)",
      "WebFetch(domain:posthog.com)",
      "WebFetch(domain:vercel.com)",
      "WebFetch(domain:www.liveauctioneers.com)",
      "WebFetch(domain:www.proxibid.com)",
      "WebFetch(domain:1stdibs.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'FILE_PATH=$(cat | jq -r \".tool_input.file_path\") && [[ \"$FILE_PATH\" =~ \\.(ts|tsx|js|jsx|json|md)$ ]] && pnpm prettier --write \"$FILE_PATH\" && pnpm eslint --fix \"$FILE_PATH\" 2>/dev/null || true'"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tool_use.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/stop.py --notify"
          }
        ]
      }
    ]
  }
}
