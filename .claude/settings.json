{
  "permissions": {
    "allow": [
      "Bash(pnpm view:*)",
      "Bash(pnpm install)",
      "Bash(pnpm run typecheck:*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run format)",
      "Bash(pnpm test:*)",
      "Bash(pnpm dlx vercel logs:*)",
      "Bash(SKIP_INTEGRATION_TESTS=true pnpm test:*)",

      "mcp__posthog__docs-search",
      "mcp__vercel-appraiser__get_deployment_build_logs",
      "mcp__vercel-appraiser__list_deployments",

      "WebSearch",
      "WebFetch(domain:www.liveauctioneers.com)",
      "WebFetch(domain:posthog.com)",
      "WebFetch(domain:www.proxibid.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=$(cat | jq -r '.tool_input.file_path') && [[ \"$FILE_PATH\" =~ \\.(ts|tsx|js|jsx|json|md)$ ]] && pnpm prettier --write \"$FILE_PATH\" && pnpm eslint --fix \"$FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
